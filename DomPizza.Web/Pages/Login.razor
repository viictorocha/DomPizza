@page "/login"
@inject AuthService AuthService
@inject NavigationManager Navigation
@using DomPizza.App.Models
@using DomPizza.App.Services

<h3>🔐 Login</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<EditForm Model="login" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Email</label>
        <InputText class="form-control" @bind-Value="login.Email" />
    </div>

    <div class="mb-3">
        <label>Senha</label>
        <InputText type="password" class="form-control" @bind-Value="login.Senha" />
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
</EditForm>

@code {
    private LoginDTO login = new();
    private string? errorMessage;

    private async Task HandleLogin()
    {
        var success = await AuthService.LoginAsync(login);

        if (success)
        {
            Navigation.NavigateTo("/perfil");
        }
        else
        {
            errorMessage = "Email ou senha incorretos.";
        }
    }
}
